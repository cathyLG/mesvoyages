{% extends "baseadmin.html.twig" %}
{% block body %}
    <table class="table table-striped table-hover"> 
        <thead class="thead-dark">
            <tr>
                <!-- titre et bouttons pour trier-->
                <th class="text-left align-top" scope="col" >
                    Ville
                </th>
                <th class="text-left align-top" scope="col">
                    Pays
                </th>
                <th class="text-left align-top" scope="col">
                    Date
                </th>
                <th class="text-left align-top" scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            {{ visite.ville }}
                        </h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <!-- date-->
                    <td>
                        {{ visite.datecreationstring }}
                        <!-- boutons d'actions -->
                    <td>
                        <a class="btn btn-secondary" href="{{ path('admin.voyage.edit', {id:visite.id}) }}" role="button" aria-pressed="true">
                            Editer
                        </a>
                        <a class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ visite.ville }} ?');" href="{{ path('admin.voyage.suppr', {id:visite.id}) }}" role="button" aria-pressed="true" >
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}