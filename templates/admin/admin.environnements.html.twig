{% extends "baseadmin.html.twig" %}
{% block body %}
    <form class="form-inline mt-1" method="POST" action="{{ path('admin.environnement.ajout') }}">
        <div class="form-group mr-1 mb-2">
            <input type="text" class="sm" name="nom">
        </div>
        <button type="submit" class="btn btn-primary mb-2 btn-sm">Ajouter</button>
    </form>
    <table class="table table-striped table-hover"> 
        <thead>
            <tr>
                <!-- titre et bouttons pour trier-->
                <th class="text-left align-top" scope="col" >
                    Nom
                </th>
                <th class="text-left align-top" scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for environnement in environnements %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            {{ environnement.nom }}
                        </h5>
                    </td>
                    <td>
                        <a href="{{ path("admin.environnement.suppr", {id:environnement.id} ) }}" class="btn btn-danger"
                           onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{environnement.nom}} ?');">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
